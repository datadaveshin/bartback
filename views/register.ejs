<!DOCTYPE html>
<html lang='en'>

<!-- ###### HEAD ####### -->
<%- include("head") %>

<body>
  <!-- ###### NAV BAR ####### -->
  <%- include("nav") %>
  <main>
    <div class='container'>
    <%- include("banner") %>

    <div class='row'>
      <div class='col s12 m12'>
        <h4>Register</h4>

        <form action="/register" method="POST" oninput="password2.setCustomValidity(password2.value != password1.value ? 'Passwords do not match' : '' )">


          <div class='row'>
            <div class='input-field col l6 s12'>
              <label for='userName'>User Name: </label>
              <input type='text' autofocus='true' required name='userName' id='userName' class='validate'>
            </div>
          </div>

          <div class='row'>
            <div class='input-field col l6 s12'>
              <label for='email'>Email: </label>
              <input type='email' required name='email' id='email' class='validate'>
            </div>
          </div>

          <div class='row'>
            <div class='input-field  col l6 s12'>
              <label for='password1'>Password: </label>
              <input type='password' required name='password1' id='password1' class='validate'>
            </div>
          </div>

          <div class='row'>
            <div class='input-field c col l6 s12'>
              <label for='password2'>Password Confirm: </label>
              <input type='password' required name='password2' id='password2' class='validate'>
            </div>
          </div>

          <div class='row center'>
            <button class='submit btn waves-effect waves-light' type='submit' name='action'>Submit
              <i class='material-icons right'>send</i>
            </button>
          </div>
        </form>
      </div>
    </div>
    </div>
  </main>
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
    <script type="text/javascript" src="../js/init.js"></script>
    <script type="text/javascript" src="../js/materialize.js"></script>
</body>
</html>
